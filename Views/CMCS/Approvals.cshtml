            <table class="table align-middle">
                <thead>
                    <tr><th>Claim #</th><th>Lecturer</th><th>Hours</th><th>Amount</th><th>Status</th><th>Actions</th></tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#1001</td>
