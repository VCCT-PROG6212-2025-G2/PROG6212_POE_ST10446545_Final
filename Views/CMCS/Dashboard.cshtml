@{
    ViewData["Title"] = "Dashboard";
}
<div class="container py-4">
    <h2 class="mb-4">Dashboard</h2>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">This Month</h5>
                    <p class="display-6 mb-0">R 0.00</p>
                    <small class="text-muted">Total Claims Submitted</small>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Recent Claims</h5>
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr><th>Date</th><th>Hours</th><th>Amount</th><th>Status</th></tr>
                        </thead>
                        <tbody>
                            <tr><td>—</td><td>—</td><td>—</td><td><span class="badge-status badge-pending">Pending</span></td></tr>
                            <tr><td>—</td><td>—</td><td>—</td><td><span class="badge-status badge-approved">Approved</span></td></tr>
                            <tr><td>—</td><td>—</td><td>—</td><td><span class="badge-status badge-rejected">Rejected</span></td></tr>
                        </tbody>
                    </table>
                    <div class="text-end mt-3">
                        <a asp-controller="CMCS" asp-action="SubmitClaim" class="btn btn-primary">New Claim</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>