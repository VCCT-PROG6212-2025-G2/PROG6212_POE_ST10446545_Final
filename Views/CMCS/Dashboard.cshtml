@model IEnumerable<CMCSProject.Models.Claim>
@{
    ViewData["Title"] = "Dashboard";
    decimal total = (ViewBag.TotalThisMonth is decimal d) ? d : 0m;
}
<div class="container py-4">
    <h2 class="mb-4">Dashboard</h2>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">This Month</h5>
                    <p class="display-6 mb-0">R @($"{total:0.00}")</p>
                    <small class="text-muted">Total Claims Submitted</small>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Recent Claims</h5>
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model)
                            {
                                var amount = c.HoursWorked * c.HourlyRate;
                                var badgeClass = c.Status switch
                                {
                                    CMCSProject.Models.ClaimStatus.Pending => "badge-pending",
                                    CMCSProject.Models.ClaimStatus.Verified => "badge-approved",
                                    CMCSProject.Models.ClaimStatus.Approved => "badge-approved",
                                    CMCSProject.Models.ClaimStatus.Rejected => "badge-rejected",
                                    _ => "badge-status"
                                };
                                <tr>
                                    <td>@c.ClaimDate.ToShortDateString()</td>
                                    <td>@c.HoursWorked</td>
                                    <td>R @($"{amount:0.00}")</td>
                                    <td><span class="badge-status @badgeClass">@c.Status</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-end mt-3">
                        <a asp-controller="CMCS" asp-action="SubmitClaim" class="btn btn-primary">New Claim</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>