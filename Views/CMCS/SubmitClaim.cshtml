@{
    ViewData["Title"] = "Submit Claim";
}
<div class="container py-4">
    <h2 class="mb-4">Submit Claim</h2>

    <form>
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Hours Worked</label>
                <input class="form-control" type="number" min="0" placeholder="e.g. 12">
            </div>
            <div class="col-md-4">
                <label class="form-label">Hourly Rate (R)</label>
                <input class="form-control" type="number" min="0" step="0.01" placeholder="e.g. 350.00">
            </div>
            <div class="col-md-4">
                <label class="form-label">Claim Date</label>
                <input class="form-control" type="date">
            </div>
            <div class="col-12">
                <label class="form-label">Additional Notes</label>
                <textarea class="form-control" rows="3" placeholder="Optional..."></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label">Upload Supporting Document</label>
                <input class="form-control" type="file" disabled
                       title="Prototype only — functionality added in Part 2">
                <div class="form-text">Allowed: .pdf, .docx, .xlsx</div>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="button" class="btn btn-success" disabled>Submit (Prototype)</button>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">Back</a>
        </div>
    </form>
</div>