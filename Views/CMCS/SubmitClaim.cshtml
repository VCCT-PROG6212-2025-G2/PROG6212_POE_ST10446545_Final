@model CMCSProject.ViewModels.ClaimCreateVm
@{
    ViewData["Title"] = "Submit Claim";
}
<div class="container py-4">
    <h2>Submit Claim</h2>
    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Lecturer Name</label>
                <input asp-for="LecturerName" class="form-control" />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label class="form-label">Hours Worked</label>
                <input asp-for="HoursWorked" class="form-control" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label class="form-label">Hourly Rate (R)</label>
                <input asp-for="HourlyRate" class="form-control" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>

            
            <div class="col-md-3">
                <label class="form-label">Total Amount (R)</label>
                <input id="TotalAmount" class="form-control" readonly />
                <small class="text-muted">Auto-calculated: Hours × Hourly Rate</small>
            </div>





            <div class="col-md-3">
                <label class="form-label">Claim Date</label>
                <input asp-for="ClaimDate" class="form-control" />
                <span asp-validation-for="ClaimDate" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label class="form-label">Supporting Documents (.pdf .docx .xlsx)</label>
                <input asp-for="Files" class="form-control" type="file" multiple />
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateTotal() {
            const hoursInput = document.getElementById("HoursWorked");
            const rateInput = document.getElementById("HourlyRate");
            const totalInput = document.getElementById("TotalAmount");

            if (!hoursInput || !rateInput || !totalInput) return;

            const hours = parseFloat(hoursInput.value) || 0;
            const rate = parseFloat(rateInput.value) || 0;
            const total = hours * rate;

            totalInput.value = total.toFixed(2);
        }

        document.addEventListener("DOMContentLoaded", function () {
            const hoursInput = document.getElementById("HoursWorked");
            const rateInput = document.getElementById("HourlyRate");

            if (hoursInput) hoursInput.addEventListener("input", updateTotal);
            if (rateInput) rateInput.addEventListener("input", updateTotal);

            updateTotal();
        });
    </script>
}