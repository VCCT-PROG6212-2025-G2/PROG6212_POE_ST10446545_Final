@model IEnumerable<CMCSProject.Models.SupportingDocument>
@{
    ViewData["Title"] = "Documents";
}
<div class="container py-4">
    <h2>Uploaded Documents</h2>
    <table class="table mt-3">
        <thead><tr><th>File</th><th>Type</th><th>Date</th><th>Claim #</th></tr></thead>
        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td><a href="@d.FilePath" target="_blank">@d.FileName</a></td>
                    <td>@d.ContentType</td>
                    <td>@d.UploadDate.ToLocalTime()</td>
                    <td>@d.ClaimId</td>
                </tr>
            }
        </tbody>
    </table>
</div>