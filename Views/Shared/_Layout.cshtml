<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCSProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCSProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="CMCS" asp-action="Dashboard">CMCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="CMCS" asp-action="Dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CMCS" asp-action="SubmitClaim">Submit Claim</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CMCS" asp-action="UploadedDocuments">Documents</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CMCS" asp-action="Approvals">Approvals</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CMCS" asp-action="Coordinator">Coordinator</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CMCS" asp-action="Manager">Manager</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CMCS" asp-action="MyClaims">My Claims</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CMCS" asp-action="Profile">Profile</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

            @if (TempData["msg"] is string msg)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3 mx-3" role="alert">
                    @msg
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CMCSProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
